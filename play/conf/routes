# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                controllers.Application.index(callback: String)

# CRUD tests
GET     /tests                 controllers.Application.getTests(callback: String)
GET		/seed                  controllers.Application.seedTestData()
POST    /tests                 controllers.Application.testsCreateUpdate()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                    controllers.Assets.at(path="/public", file)
